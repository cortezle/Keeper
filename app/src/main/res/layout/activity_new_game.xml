<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.keeper.fragments.MainContentFragment">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/puntosA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="000"
            android:textColor="@color/colorPrimaryLight"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_save_pr_24dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/puntosB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="000"
            android:textColor="@color/colorPrimaryLight"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_fecha"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_date"/>

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="DD/MM/YY"
                android:textColor="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/editText_equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Team 1..." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/score_a_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1" />

                <Button
                    android:id="@+id/score_a_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2" />

                <Button
                    android:id="@+id/score_a_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_hora"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_access_time"/>

            <TextView
                android:id="@+id/tv_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="HH/MM"
                android:textColor="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/editText_equipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Team 2..." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/score_b_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1" />

                <Button
                    android:id="@+id/score_b_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2" />

                <Button
                    android:id="@+id/score_b_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>
